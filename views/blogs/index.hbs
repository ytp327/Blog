<h1>Blogs</h1>
    <div class="row">
        {{#each blogs}}
            <div class="col s12 m4">
                <div class="card">
                    <div class="card-image">
                        {{!-- todo: editIcon --}}
                    </div>
                    <div class="card-content center-align">
                        <h5>{{title}}</h5>
                        <p>{{body}}</p>
                        <br>
                        <div class="chip">
                            <img src="{{user.image}}" alt="">
                            <a href="/blogs/user/{{user._id}}">{{user.displayName}}</a>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <a href="blogs/{{_id}}" class="btn grey">Read More</a>
                    </div>
                </div>
            </div>
        {{else}}
            <p>No blogs to display</p>
        {{/each}}
    </div>